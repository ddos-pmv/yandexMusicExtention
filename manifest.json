{
	"manifest_version": 3,
	"name": "Яндекс Музыка - статистика и плеер",
	"version": "0.1",
	"description": "Расширение добавляет кнопки управления плеером, позволяет быстро просмотреть и проанализировать историю прослушиваний.",
	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"action": {
		"default_icons": {
			"16": "icons/icon-16.png",
			"32": "icons/icon-32.png",
			"48": "icons/icon-48.png",
			"128": "icons/icon-128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["tabs", "activeTab", "scripting", "storage"],
	"host_permissions": ["https://music.yandex.ru/*"],
	"externally_connectable": {
		"matches": ["https://music.yandex.ru/*"]
	},
	"options_page": "hello.html"
}
